<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AcaraanBarengApps" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="NunitoBold" parent="TextAppearance.AppCompat">
        <item name="fontFamily">font/Nunito-Bold</item>
    </style>

    <style name="TextGunmetalNunitoBold24" parent="NunitoBold">
        <item name="android:textColor">@color/colorGunmetal</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonYellowRounded18RubikMedium14Black" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/rubik_regular</item>
        <item name="android:background">@drawable/bg_button_gradient_yellow_rounded18</item>
        <item name="android:textColor">@color/colorBlack87</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>